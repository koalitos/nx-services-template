generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Profile {
  id              String           @id @default(uuid())
  supabaseUserId  String           @unique
  handle          String           @unique
  displayName     String?
  avatarUrl       String?
  userTypeId      String?
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  calculationLogs CalculationLog[]
  userType        UserType?        @relation(fields: [userTypeId], references: [id], onDelete: SetNull)
  chatParticipants ChatParticipant[]
}

model CalculationLog {
  id             String   @id @default(uuid())
  supabaseUserId String
  operandA       Float
  operandB       Float
  result         Float
  createdAt      DateTime @default(now())

  profile Profile? @relation(fields: [supabaseUserId], references: [supabaseUserId], onDelete: Cascade)

  @@index([supabaseUserId])
}

model UserGroup {
  id          String     @id @default(uuid())
  name        String     @unique
  description String?
  isActive    Boolean    @default(true)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  userTypes   UserType[]
}

model UserType {
  id          String             @id @default(uuid())
  name        String
  description String?
  isActive    Boolean            @default(true)
  createdAt   DateTime           @default(now())
  updatedAt   DateTime           @updatedAt
  userGroupId String?

  userGroup UserGroup? @relation(fields: [userGroupId], references: [id], onDelete: SetNull)
  pageRoles UserTypePageRole[]
  profiles  Profile[]

  @@unique([userGroupId, name])
}

model Page {
  id          String             @id @default(uuid())
  key         String             @unique
  name        String
  path        String?
  description String?
  isActive    Boolean            @default(true)
  createdAt   DateTime           @default(now())
  updatedAt   DateTime           @updatedAt
  roles       UserTypePageRole[]
}

model UserTypePageRole {
  id         String   @id @default(uuid())
  userTypeId String
  pageId     String
  role       String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  userType UserType @relation(fields: [userTypeId], references: [id], onDelete: Cascade)
  page     Page     @relation(fields: [pageId], references: [id], onDelete: Cascade)

  @@unique([userTypeId, pageId])
}

model ChatRoom {
  id           String            @id @default(uuid())
  name         String
  type         ChatRoomType      @default(GROUP)
  directKey    String?           @unique
  createdAt    DateTime          @default(now())
  updatedAt    DateTime          @updatedAt
  participants ChatParticipant[]
  messages     ChatMessage[]
}

model ChatParticipant {
  id             String       @id @default(uuid())
  chatRoomId     String
  supabaseUserId String
  joinedAt       DateTime     @default(now())
  leftAt         DateTime?

  chatRoom ChatRoom   @relation(fields: [chatRoomId], references: [id], onDelete: Cascade)
  profile  Profile    @relation(fields: [supabaseUserId], references: [supabaseUserId], onDelete: Cascade)
  messages ChatMessage[]

  @@unique([chatRoomId, supabaseUserId])
}

model ChatMessage {
  id                   String   @id @default(uuid())
  chatRoomId           String
  senderParticipantId  String
  senderUserId         String
  ciphertext           String
  iv                   String
  authTag              String
  createdAt            DateTime @default(now())

  chatRoom    ChatRoom       @relation(fields: [chatRoomId], references: [id], onDelete: Cascade)
  participant ChatParticipant @relation(fields: [senderParticipantId], references: [id], onDelete: Cascade)

  @@index([chatRoomId, createdAt])
}

enum ChatRoomType {
  GROUP
  DIRECT
}
