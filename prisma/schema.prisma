generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Profile {
  id              String           @id @default(uuid())
  supabaseUserId  String           @unique
  displayName     String?
  avatarUrl       String?
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  calculationLogs CalculationLog[]
}

model CalculationLog {
  id             String   @id @default(uuid())
  supabaseUserId String
  operandA       Float
  operandB       Float
  result         Float
  createdAt      DateTime @default(now())

  profile Profile? @relation(fields: [supabaseUserId], references: [supabaseUserId], onDelete: Cascade)

  @@index([supabaseUserId])
}

model UserGroup {
  id          String     @id @default(uuid())
  name        String     @unique
  description String?
  isActive    Boolean    @default(true)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  userTypes   UserType[]
}

model UserType {
  id          String     @id @default(uuid())
  name        String
  description String?
  isActive    Boolean    @default(true)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  userGroupId String?

  userGroup UserGroup? @relation(fields: [userGroupId], references: [id], onDelete: SetNull)

  @@unique([userGroupId, name])
}
